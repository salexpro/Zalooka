section.banner(class=(page != 'main') ? "banner--section banner--" + type : false)
    if page == 'profile'
        .container.column.banner_container
            .banner_card
                .banner_card_img
                    img(src="https://placeimg.com/260/260/people", alt="Аватар")
                .banner_card_content
                    p.banner_card_name
                        | Елизавета Петрова
                    .banner_card_contacts
                        .banner_card_col
                            .banner_card_col_label
                                | Почта:
                            .banner_card_col_content
                                | Epetrova@gmail.com
                                br
                                | petrovaea@gmail.com
                        .banner_card_col
                            .banner_card_col_label
                                | Телефон:
                            .banner_card_col_content
                                | +7 900 111 07 11
                                br
                                | +7 999 113 02 06
                                br
                                | +7 999 555 11 03
    else
        p.banner_header
            case page
                when 'main'
                    | НАЧНИ ПУТЕШЕСТВИЕ С ВЫБОРА МЕСТА
                when 'section'
                    if type == 'tour'
                        | Экскурсия 
                    =name
                    |  в Паттайе
                when 'pricelist'
                    =name
                    |  (Паттайя, Таиланд)
                when 'reviews'
                    if country
                        if city
                            =name
                            | : 
                            =country
                            | , 
                            =city
                        else
                            =name
                            if country == 'Страны'
                                |  по странам
                            else
                                | 
                                =country
                    else
                        =name
                default
                    =name
        if page == 'reviews'
            .banner_header.banner_header--secondary
                | Читайте отзывы по интересующим вас направлениям и услугам
        if page != 'page' && page != 'visa' && type != 'tour' || page.includes('articles')
            .banner_selplace(class=page=='pricelist'?'banner_selplace--pricelist':'')
                ul#start.tabs.banner_selplace_tabs(data-tabs='' data-link-active-class='is_active' data-panel-active-class='is_active')
                    li.tabs-title.banner_selplace_tab.is_active
                        a(href='#start_tours', aria-selected='true')
                            | Поиск по турам
                    li.tabs-title.banner_selplace_tab
                        a(data-tabs-target='start_transfers', href='#start_transfers')
                            | Поиск по трансферам
                .banner_selplace_content(data-tabs-content='start')
                    #start_tours.tabs-panel.banner_selplace_tab-panel.is_active
                        form(action="")
                            input(type="text" placeholder="Название тура" name="title" required)
                            button.button
                                | Поиск
                    #start_transfers.tabs-panel.banner_selplace_tab-panel
                        form(action="")
                            select(name="from")
                                option(selected disabled value="") Откуда
                            select(name="to")
                                option(selected disabled value="") Куда
                            input(type="text" placeholder="Дата" name="date")
                            select(name="people")
                                option(selected disabled value="") Человек
                                option(value="4") 4 пас
                            //- if page!='pricelist'
                                input(type="text" placeholder="Услуга" name="service")
                            button.button
                                | Поиск