.lmenu
    ul.menu.vertical.lmenu_lvl_one
        li
            a(href="/")
                span.lmenu_icon
                    i.icon-screen-desktop
                span.lmenu_label
                    | Главная
        each category in categories
            li
                a&attributes({
                    'href': `/${category.alias}.html`, 
                    'class': type==category.alias ? 'active' : false, 
                    'data-menu': category.hasOwnProperty('sub1') ? `lmenu_${category.alias}` : false
                })
                    span.lmenu_icon
                        case category.icon.type
                            when 'mixin'
                                +icon(...category.icon.content)
                            when 'class'
                                i&attributes({'class': category.icon.content})
                    span.lmenu_label
                        =category.name

    .lmenu_lvl_two
        each category in categories
            if category.hasOwnProperty('sub1')
                ul.menu.vertical&attributes({'id': `lmenu_${category.alias}`})
                    each item in category.sub1
                        li
                            a&attributes({
                                'href': (item.alias=='#') ? item.alias : `/${category.alias}/${item.alias}.html`,
                                'data-menutwo': item.sub ? `lmenutwo_${item.alias}` : false
                            })
                                =item.name 
    .lmenu_lvl_three
        each category in categories
            if category.hasOwnProperty('sub2')
                each level in category.sub2
                    .lmenu_content&attributes({'id': `lmenutwo_${level.alias}`})
                        each menu in level.content
                            ul.menu.vertical
                                if menu.hasOwnProperty('header')
                                    li
                                        span=menu.header
                                each item in menu.items
                                    li
                                        a&attributes({'href': (item.alias=='#') ? item.alias : `/${category.alias}/${level.alias}/${item.alias}.html`})
                                            =item.name 
                        .lmenu_more
                            a(href="#")
                                | Смотреть все
                                | 
                                =category.name
                                i.icon-arrow-down
