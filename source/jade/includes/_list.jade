mixin list(name, items, more, mod)
    .list(class=mod ? 'list--' + mod : '')
        .list_content
            a.header
                =name
            ul.menu.vertical
                each item in items
                    li
                        a(href="#")
                            =item
        if more
            .list_all
                a(href="#")
                    if typeof(more) == 'boolean'
                        | Смотреть все
                        i.icon-arrow-right
                    else
                        =more
                        i.icon-arrow-down